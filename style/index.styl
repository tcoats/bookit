@require "../node_modules/normalize.css/normalize.css"
@require "../node_modules/flexy-grid/flexy-grid"

$primary = #46413E
$brand-primary = #30C100
$subtle-border = #ddd
$selected = #0097D6
$danger = #FF2D2D


html, body
  margin 0
  padding 0
  height 100%

.wrapper
  padding 0
  height 100%

body
  font-family Lato, Helvetica, sans-serif
  font-size 14px
  color #333
  height 100%

h2
  margin 20px 0 14px 0
  font-size 20px

table
  border-collapse collapse
  width 100%

.scroll
  height 100%
  overflow-y auto
  -webkit-overflow-scrolling touch
  height 100%
  position relative

.main
  height 100%
  > .scroll
    padding 18px
  > .right
    text-align right

.booking
  border 1px solid $subtle-border
  border-left 4px solid $brand-primary
  &.selection
    border 1px solid $subtle-border
  &.selected
    background-color $selected
    border-color $selected
    color white
  margin-bottom 14px
  padding 12px 14px
  color $primary
  text-decoration none
  display block
  .booking-title
    font-size 16px
    font-weight bold
  .booking-dates
    margin-top 3px

.action
  text-decoration none
  color $primary
  display inline-block
  height 32px
  font-size 14px
  text-align center
  line-height 30px
  border 1px solid $subtle-border
  padding 0 14px
  border-radius 16px

  & + .action
    margin-left 14px

  &.primary
    color white
    background-color $selected
    border-color transparent

  &.danger
    color white
    background-color $danger
    border-color transparent

.actions
  margin-top 36px

h2 a
  color $primary
  text-decoration none
  small
    padding-left 10px
    font-size 10px

.separator
  margin 0 5px 14px 5px
  justify-content center
  align-self center

textarea
  font-size 20px
  padding 19px 0 14px 0
  margin 0
  border 0
  font-family Lato, Helvetica, sans-serif
  font-weight bold
  color $selected
  resize none
  display block
  width 100%
  &:focus
    outline none

.defaultnames
  list-style-type none
  padding 0
  margin 0
  a
    display block
    padding 5px 0
    color $selected
    text-decoration none

@require './astro'
